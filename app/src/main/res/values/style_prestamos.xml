<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContentGeneralPrestamos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_temporal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextDescriptionPrestamos">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:text">Aqui encontrarás información sobre tus préstamos vigentes.</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextDescriptionProgressPrestamos">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RecyclerPrestamos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbars">none</item>
    </style>

</resources>