<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContentGeneralForgot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background_temporal</item>
    </style>

    <style name="ContentCardForgot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item> 
    </style>

    <style name="LinearContentForgot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ImageForgot">
        <item name="android:layout_width">233dp</item>
        <item name="android:layout_height">113dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/liderman_logo</item>
    </style>

    <style name="TextInputForgot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:theme">@style/GreyTheme</item>
    </style>

    <style name="EditTextForgot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/ic_user_black</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint">@string/user</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:inputType">text|textCapCharacters</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="AppButtonForgot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary2</item>
        <item name="android:text">@string/forgot_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_login_button</item>
    </style>



</resources>