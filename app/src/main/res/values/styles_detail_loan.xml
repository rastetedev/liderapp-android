<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContentGeneralDetailLoan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background_temporal</item>
    </style>

    <style name="TitleTextDetailLoan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:text">Detalle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RecyclerDetailLoan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/white</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:scrollbars">none</item>
        <item name="tooltipText">Detalle de pagos</item>
    </style>

    <style name="LinearTotalDetailLoan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextTotalDetailLoan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/colorPrimary2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LinearTotalDetailLoan.Contact">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextContactDetailLoan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:text">¿Alguna duda escribenos al chat?</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextTareoReport">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">¿Has encontrado un error?.</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonContactDetailLoan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_3d_red</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:text">Ir al chat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_login_button</item>
    </style>

    <style name="ButtonChat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_3d_red</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:text">Ir a chat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size_login_button</item>
    </style>

    <style name="ButtonReport">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_3d_red</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:text">Informar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size_login_button</item>
    </style>


</resources>