<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gray_4</item>
        <item name="colorPrimaryDark">@color/colorPrimary2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimary2</item>
        <item name="colorAccent">#2898b1</item>
    </style>


    <!-- TEMA DEL SPLASH -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <!-- TEMA DEL LOGIN -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gray_4</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="error_appearance_2" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GreyTheme">
        <item name="android:colorBackground">@color/text_secondary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="colorPrimary">@color/text_secondary</item>
        <item name="colorPrimaryDark">@color/text_secondary</item>
        <item name="colorAccent">@color/text_secondary</item>
        <item name="colorControlNormal">@color/text_secondary</item>
        <item name="colorControlActivated">@color/text_secondary</item>
        <item name="colorControlHighlight">@color/text_secondary</item>
    </style>



    <style name="WhiteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="SimulatorEquitySpinnerWidth2" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/white</item>
    </style>




    <!--  Mantener consistencia -->

    <style name="LinkSmallApp">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small_link</item>
    </style>

    <style name="LinkSmallAppSecondary">
        <item name="android:textColor">@color/colorPrimary2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small_link</item>
    </style>

    <style name="AppTitle">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightAppSubtitle">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="optionInHome">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_option_menu</item>
        <item name="android:gravity">bottom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="otherButtonText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="socialButtonText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BoldAppSubtitle">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/shape_3d_red</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="MainButtonText.AmaCrece">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/shape_ama_crece</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="SecondButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/shape_second_button</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="MainButtonGrisText">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/shape_main_gris_button</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="MainButtonGrisTwoText">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/shape_main_gris_two_button</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>


    <style name="ThemeIcon">
        <item name="tint">@color/colorPrimary2</item>
    </style>


    <!-- Animaciones -->

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <!-- Inputs -->
    <style name="RedThemeInput">
        <item name="android:colorBackground">@color/text_secondary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="colorPrimary">@color/text_secondary</item>
        <item name="colorPrimaryDark">@color/text_secondary</item>
        <item name="colorAccent">@color/colorPrimary2</item>
        <item name="colorControlNormal">@color/text_secondary</item>
        <item name="colorControlActivated">@color/colorPrimary2</item>
        <item name="colorControlHighlight">@color/colorPrimary2</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

</resources>
