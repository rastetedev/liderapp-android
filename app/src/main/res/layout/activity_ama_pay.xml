<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_temporal"
    tools:context=".presentation.ui.activity.home.lidermania.AmaPayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary2"
            android:elevation="0dp">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            style="@style/ButtonCardLidermaniaAnimation"
            android:background="@drawable/tab_two"
            android:paddingStart="60dp"
            android:paddingEnd="0dp"
            android:textSize="16sp"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText,SmallSp" />

        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:color="@color/colorPrimary2"
            app:eventsEnabled="true"
            app:headerColor="@color/white"
            app:headerLabelColor="@color/black"
            app:pagesColor="@color/white"
            app:selectionColor="@color/colorPrimary2"
            app:selectionDisabled="false"
            app:selectionLabelColor="@color/black"
            app:todayLabelColor="@color/colorPrimary2" />


        <LinearLayout
            android:id="@+id/linear_days_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>